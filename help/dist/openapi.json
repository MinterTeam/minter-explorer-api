{
  "openapi": "3.0.0",
  "info": {
    "version": "0.0.1",
    "title": "Minter Explorer api"
  },
  "paths": {
    "/api/v1/blocks": {
      "get": {
        "tags": [
          "Blocks"
        ],
        "summary": "Get list of blocks",
        "operationId": "getBlocks",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Blocks per page",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of blocks",
            "content": {
              "application-json": {
                "schema": {
                  "$ref": "#/components/schemas/BlockPaginatedCollectionResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/blocks/{height}": {
      "get": {
        "tags": [
          "Blocks"
        ],
        "summary": "Get block detail",
        "operationId": "getBlock",
        "parameters": [
          {
            "name": "height",
            "in": "path",
            "description": "Block height",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of blocks",
            "content": {
              "application-json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/BlockResponse"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Block not found",
            "content": {
              "application-json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "object",
                      "properties": {
                        "code": {
                          "type": "integer",
                          "example": 404
                        },
                        "message": {
                          "type": "string",
                          "example": "Block not found."
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/blocks/{height}/transactions": {
      "get": {
        "tags": [
          "Blocks"
        ],
        "summary": "Get list of transactions by block",
        "operationId": "getBlockTransactions",
        "parameters": [
          {
            "name": "height",
            "in": "path",
            "description": "Block height",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of transactions",
            "content": {
              "application-json": {
                "schema": {
                  "$ref": "#/components/schemas/TransactionPaginatedCollectionResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/coins": {
      "get": {
        "tags": [
          "Coins"
        ],
        "summary": "Get list of coins",
        "operationId": "getCoins",
        "parameters": [
          {
            "name": "symbol",
            "in": "query",
            "description": "Coin symbol for filter",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of coins",
            "content": {
              "application-json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/CoinResponse"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/addresses": {
      "get": {
        "tags": [
          "Addresses"
        ],
        "summary": "Get list of addresses",
        "operationId": "getAddresses",
        "parameters": [
          {
            "name": "addresses",
            "in": "query",
            "required": true,
            "description": "List of addresses",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of Minter addresses",
            "content": {
              "application-json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/AddressResponse"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/addresses/{address}": {
      "get": {
        "tags": [
          "Addresses"
        ],
        "summary": "Get Minter address detail",
        "operationId": "getAddress",
        "parameters": [
          {
            "name": "address",
            "in": "path",
            "required": true,
            "description": "Minter address",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Minter address details",
            "content": {
              "application-json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/AddressResponse"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/addresses/{address}/transactions": {
      "get": {
        "tags": [
          "Addresses"
        ],
        "summary": "Get transactions list by Minter address",
        "operationId": "getAddressTransactions",
        "parameters": [
          {
            "name": "address",
            "in": "path",
            "required": true,
            "description": "Minter address",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "startblock",
            "in": "query",
            "description": "Start block id",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "endblock",
            "in": "query",
            "description": "End block id",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of transactions",
            "content": {
              "application-json": {
                "schema": {
                  "$ref": "#/components/schemas/TransactionPaginatedCollectionResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/transactions": {
      "get": {
        "tags": [
          "Transactions"
        ],
        "summary": "Get transactions list",
        "operationId": "getTransactions",
        "parameters": [
          {
            "name": "addresses",
            "in": "query",
            "description": "List of addresses",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "startblock",
            "in": "query",
            "description": "Start block id",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "endblock",
            "in": "query",
            "description": "End block id",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of transactions",
            "content": {
              "application-json": {
                "schema": {
                  "$ref": "#/components/schemas/TransactionPaginatedCollectionResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/transactions/{hash}": {
      "get": {
        "tags": [
          "Transactions"
        ],
        "summary": "Get transaction detail by hash",
        "operationId": "getTransaction",
        "parameters": [
          {
            "name": "hash",
            "in": "path",
            "description": "Transaction hash",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Transaction details",
            "content": {
              "application-json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/TransactionResponse"
                    }
                  }
                }
              }
            }
          },
          "206": {
            "description": "Invalid transaction details",
            "content": {
              "application-json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/InvalidTransactionResponse"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/validators/{pubKey}/transactions": {
      "get": {
        "tags": [
          "Validators"
        ],
        "summary": "Get list of transactions by validator",
        "operationId": "getValidatorTransactions",
        "parameters": [
          {
            "name": "pubKey",
            "in": "path",
            "description": "Validator public key",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "startblock",
            "in": "query",
            "description": "Start block id",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "endblock",
            "in": "query",
            "description": "End block id",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of transactions",
            "content": {
              "application-json": {
                "schema": {
                  "$ref": "#/components/schemas/TransactionPaginatedCollectionResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BlockResponse": {
        "properties": {
          "height": {
            "description": "Block height",
            "type": "integer",
            "example": 34863
          },
          "size": {
            "description": "Block size",
            "type": "integer",
            "example": 253
          },
          "txCount": {
            "description": "Transaction count",
            "type": "integer",
            "example": 25
          },
          "blockTime": {
            "description": "Block time",
            "type": "integer",
            "example": 34863
          },
          "timestamp": {
            "description": "Block height",
            "type": "integer",
            "example": 518
          },
          "reward": {
            "description": "Block reward",
            "type": "string",
            "example": "333"
          },
          "hash": {
            "description": "Block hash",
            "type": "string",
            "example": "ITHA0XQPS5XTOY6NTTOOJX5VAVZQHTRIZJDHQKKUPUQDNX7JYVDE4UO5LFFCWSVA"
          }
        },
        "type": "object"
      },
      "BlockPaginatedCollectionResponse": {
        "properties": {
          "data": {
            "description": "Blocks",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/BlockResponse"
            }
          },
          "links": {
            "$ref": "#/components/schemas/PaginationLinksResponse"
          },
          "meta": {
            "$ref": "#/components/schemas/PaginationMetaResponse"
          }
        },
        "type": "object"
      },
      "CoinResponse": {
        "properties": {
          "crr": {
            "description": "Coin crr",
            "type": "integer",
            "example": 10
          },
          "volume": {
            "description": "Coin volume",
            "type": "string",
            "example": "45656534.3546"
          },
          "reserve_balance": {
            "description": "Coin reserve balance",
            "type": "string",
            "example": "10.356"
          },
          "name": {
            "description": "Coin name",
            "type": "string",
            "example": "My super coin"
          },
          "symbol": {
            "description": "Coin symbol",
            "type": "string",
            "example": "MNT"
          }
        },
        "type": "object"
      },
      "PaginationLinksResponse": {
        "properties": {
          "first": {
            "description": "First page",
            "type": "string",
            "example": "https://testnet.explorer.minter.network/blocks?page=1"
          },
          "last": {
            "description": "Last page",
            "type": "string",
            "example": "https://testnet.explorer.minter.network/blocks?page=10"
          },
          "prev": {
            "description": "Previous page",
            "type": "string",
            "example": "https://testnet.explorer.minter.network/blocks?page=1"
          },
          "next": {
            "description": "Next page",
            "type": "string",
            "example": "https://testnet.explorer.minter.network/blocks?page=2"
          }
        },
        "type": "object"
      },
      "PaginationMetaResponse": {
        "properties": {
          "current_page": {
            "description": "Current page number",
            "type": "integer",
            "example": 2
          },
          "last_page": {
            "description": "Last page number",
            "type": "integer",
            "example": 10
          },
          "path": {
            "description": "Request path",
            "type": "string",
            "example": "https://testnet.explorer.minter.network"
          },
          "per_page": {
            "description": "Elements per page",
            "type": "integer",
            "example": 50
          },
          "total": {
            "description": "Total number of elements",
            "type": "integer",
            "example": 16434
          }
        },
        "type": "object"
      },
      "AddressResponse": {
        "properties": {
          "address": {
            "description": "Minter address",
            "type": "string",
            "example": "Mxe449e9fd85fd553fa45d245b62e30253bce29cc7"
          },
          "balances": {
            "description": "Address balances",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/AddressBalanceResponse"
            }
          }
        },
        "type": "object"
      },
      "AddressBalanceResponse": {
        "properties": {
          "coin": {
            "description": "Coin symbol",
            "type": "string",
            "example": "MNT"
          },
          "amount": {
            "description": "Amount of coin",
            "type": "string",
            "example": 1257.4657
          }
        }
      },
      "TransactionResponse": {
        "properties": {
          "txn": {
            "description": "Transaction number",
            "type": "integer",
            "example": 17653
          },
          "hash": {
            "description": "Transaction hash",
            "type": "string",
            "example": "Mtc923c18c1d842dcba262c63df22003d5ee4e683dc2927acf9580f083ad9e193e"
          },
          "nonce": {
            "description": "Transaction nonce",
            "type": "integer",
            "example": 113
          },
          "block": {
            "description": "Block id",
            "type": "integer",
            "example": 119
          },
          "timestamp": {
            "description": "Transaction timestamp",
            "type": "string",
            "example": "2019-02-14T06:45:18.743Z"
          },
          "fee": {
            "description": "Transaction fee",
            "type": "string",
            "example": 0.2
          },
          "type": {
            "description": "Transaction type",
            "type": "string",
            "example": "send"
          },
          "payload": {
            "description": "Transaction payload",
            "type": "string",
            "example": "Super tx from developers"
          },
          "from": {
            "description": "Transaction sender address",
            "type": "string",
            "example": "Mx184ac726059e43643e67290666f7b3195093f870"
          },
          "data": {
            "description": "Transaction data",
            "type": "object",
            "properties": {
              "coin": {
                "description": "Send coin symbol",
                "type": "string",
                "example": "MNT"
              },
              "to": {
                "description": "Receiver address",
                "type": "string",
                "example": "Mxee81347211c72524338f9680072af90744333146"
              },
              "amount": {
                "description": "Amount of coins",
                "type": "string",
                "example": 12.34654
              }
            }
          }
        }
      },
      "InvalidTransactionResponse": {
        "properties": {
          "hash": {
            "description": "Transaction hash",
            "type": "string",
            "example": "Mtc923c18c1d842dcba262c63df22003d5ee4e683dc2927acf9580f083ad9e193e"
          },
          "block": {
            "description": "Block id",
            "type": "integer",
            "example": 119
          },
          "timestamp": {
            "description": "Transaction timestamp",
            "type": "string",
            "example": "2019-02-14T06:45:18.743Z"
          },
          "type": {
            "description": "Transaction type",
            "type": "string",
            "example": "send"
          },
          "from": {
            "description": "Transaction sender address",
            "type": "string",
            "example": "Mx184ac726059e43643e67290666f7b3195093f870"
          }
        }
      },
      "TransactionPaginatedCollectionResponse": {
        "properties": {
          "data": {
            "description": "Transactions",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TransactionResponse"
            }
          },
          "links": {
            "$ref": "#/components/schemas/PaginationLinksResponse"
          },
          "meta": {
            "$ref": "#/components/schemas/PaginationMetaResponse"
          }
        },
        "type": "object"
      }
    }
  }
}